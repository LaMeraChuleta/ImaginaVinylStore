@page "/ManageCatalogMusic"

@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization

<div class="w-full px-10 my-5 px-24">
    <h1 class="title-xl">Administrar Catalogo de Musica</h1>
    <table class="table-custom">
        <thead class="thead-custom">
            <tr class="tr-thead-custom">
                <th class="th-custom">
                    Titulo
                </th>
                <th class="th-custom">
                    Artista
                </th>
                <th class="th-custom">
                    Genero
                </th>
                <th class="th-custom">
                    Formato
                </th>
                <th class="th-custom">
                    Precio
                </th>
                <th class="th-custom">
                    Estatus
                </th>
                <th class="th-custom">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CatalogMusics)
            {
                <tr class="tr-tbody-custom">
                    <td class="td-custom">
                        @item.Title
                    </td>
                    <td class="td-custom">
                        @item.Artist?.Name
                    </td>
                    <td class="td-custom">
                        @item.Genre?.Name
                    </td>
                    <td class="td-custom">
                        @item.Format?.Name - @item.Presentation?.Name
                    </td>
                    <td class="td-custom">
                        $@item.Price.ToString("#,##0.00")
                    </td>
                    @if (!item.ActiveInStripe)
                    {
                        <td class="td-custom">
                            <button @onclick="@(() => ActiveCatalogMusicInStripe(item))" class="bg-yellow-300 border rounded-xl p-2">Activar en Stripe</button>
                        </td>
                    }
                    else if (item.Sold)
                    {
                        <td class="td-custom">
                            <span class="bg-gray-300 border rounded-xl p-2">Vendido</span>
                        </td>
                    }
                    else
                    {
                        <td class="td-custom">
                            <span class="bg-green-300 border rounded-xl p-2">Disponible</span>
                        </td>
                    }
                    <td class="td-custom flex flex-col space-y-1">
                        @if (item.Sold)
                        {
                            <span>Ver detalles</span>
                        }
                        else
                        {
                            <button class="border-2 border-blue-800 bg-blue-400 rounded-2">Fotos</button>
                            <button @onclick="@(() => EditMusicCatalog(item.Id))" class="border-2 border-yellow-800 bg-yellow-400 rounded-2">Editar</button>
                            <button class="border-2 border-red-800 bg-red-400 rounded-2">Eliminar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>