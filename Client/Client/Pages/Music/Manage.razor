@page "/ManageCatalogMusic"

@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization

<div class="w-full px-10 my-5 px-24">
    <div class="justify-between w-full mb-5">
        <h1 class="md:text-4xl text-lg text-gray-800 uppercase font-bold my-5">Administrar Catalogo</h1>
        <div class="w-full inline-flex justify-between">
            <div>
                <button class="inline-flex rounded-3xl text-gray-600 font-bold border w-32 border-gray-600 bg-gray-200 p-3 justify-center my-auto">
                    Musica
                </button>
                <button @onclick="@(() => NavigationManager.NavigateTo("/ManageCatalogAudio"))" class="inline-flex rounded-3xl text-gray-600 hover:bg-gray-200 font-bold border w-32 border-gray-600 p-3 justify-center my-auto">
                    Equipo Audio
                </button>
            </div>
            <button @onclick="@(() => NavigationManager.NavigateTo("/CreateCatalogMusic"))"
                    class="inline-flex rounded-md bg-blue-600 hover:bg-blue-500 justify-between text-white font-bold border w-48 border-blue-200 p-3 my-auto">
                Agregar articulo
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
        </div>
    </div>
    <table class="table-custom">
        <thead class="thead-custom">
            <tr class="tr-thead-custom">
                <th class="th-custom">
                    Titulo
                </th>
                <th class="th-custom">
                    Artista
                </th>
                <th class="th-custom">
                    Genero
                </th>
                <th class="th-custom">
                    Formato
                </th>
                <th class="th-custom">
                    Precio
                </th>
                <th class="th-custom">
                    Estatus
                </th>
                <th class="th-custom">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CatalogMusics)
            {
                <tr class="tr-tbody-custom">
                    <td class="td-custom">
                        @item.Title
                    </td>
                    <td class="td-custom">
                        @item.Artist?.Name
                    </td>
                    <td class="td-custom">
                        @item.Genre?.Name
                    </td>
                    <td class="td-custom">
                        @item.Format?.Name - @item.Presentation?.Name
                    </td>
                    <td class="td-custom">
                        $@item.Price.ToString("#,##0.00")
                    </td>
                    @if (!item.ActiveInStripe)
                    {
                        <td class="td-custom">
                            <button @onclick="@(() => ActiveCatalogMusicInStripe(item))" class="bg-yellow-300 border rounded-xl p-2 text-xs">Activar Stripe</button>
                        </td>
                    }
                    else if (item.Sold)
                    {
                        <td class="td-custom">
                            <span class="bg-gray-300 border rounded-xl p-2">Vendido</span>
                        </td>
                    }
                    else
                    {
                        <td class="td-custom">
                            <span class="bg-green-300 border rounded-xl p-2">Disponible</span>
                        </td>
                    }
                    <td class="td-custom flex flex-col space-y-1">
                        @if (item.Sold)
                        {
                            <span>Ver detalles</span>
                        }
                        else
                        {
                            <button @onclick="@(() => EditMusicCatalog(item.Id))" class="inline-flex justify-center text-sm rounded-3xl text-gray-600 font-medium border w-24 hover:bg-yellow-100 border-yellow-300 p-1 my-auto">
                                Editar
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                                </svg>
                            </button>

                            <button class="inline-flex justify-center text-sm rounded-3xl text-gray-600 font-medium border w-24 hover:bg-red-100 border-red-300 p-1 my-auto">
                                Eliminar
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>