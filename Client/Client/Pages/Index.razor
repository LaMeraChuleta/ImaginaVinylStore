@page "/"

<PageTitle>Index</PageTitle>
<Carrousel></Carrousel>
<div class="w-full">
    @if (CatalogMusics.Any())
    {
        <div class="my-3 mx-5">
            <p class="pl-5 text-2xl font-bold">NOVEDADES</p>
            <hr class="border-gray-300 my-2"/>
            <div class="scroll-container">
                <div class="inline-flex space-x-4 px-3">
                    @foreach (var item in CatalogMusics)
                    {
                        <CardCatalogMusic MusicCatalog="item"></CardCatalogMusic>
                    }
                </div>
            </div>
        </div>


        <div class="my-3 mx-5">
            <p class="pl-5 text-2xl font-bold">ARTISTAS</p>
            <hr class="border-gray-300 my-2"/>
            <div class="flex justify-start p-2 md:p-5">
                <div class="grid gap-4 grid-cols-1 sm:grid-cols-3 lg:grid-cols-6">
                    @foreach (var item in Artists)
                    {
                        <CardCatalogArtist Artist="item"></CardCatalogArtist>
                    }
                </div>
            </div>
        </div>

        <div class="my-3 mx-5">
            <p class="pl-5 text-2xl font-bold">RECOMENDACIONES</p>
            <hr class="border-gray-300 my-2"/>
            <div class="flex justify-start p-2 md:p-5">
                <div class="grid gap-4 grid-cols-6">
                    @foreach (var item in CatalogMusics)
                    {
                        <CardCatalogMusic MusicCatalog="item"></CardCatalogMusic>
                    }
                </div>
            </div>
        </div>
    }
</div>