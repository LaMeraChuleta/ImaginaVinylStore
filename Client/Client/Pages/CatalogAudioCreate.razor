@page "/CreateCatalogAudio"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Crear Catalogo Audio</PageTitle>

@if (!IsLoading)
{
    <div class="w-full px-10 inline-flex my-5">
        <div class="md:w-2/3 h-full">
            <div class="text-2xl text-center font-semibold my-2.5">
                <h1>Agregar nuevo catálogo audio</h1>
            </div>                        
            <hr />
            <EditForm EditContext="@_newContextAudioCatalog" OnValidSubmit="@CreateCataloAudios">
                <DataAnnotationsValidator />
                <div class="flex flex-wrap">
                    <div class="w-full md:w-1/2 md:p-5 space-y-5">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Nombre</label>
                            <input @bind="NewAudioCatalog.Name" type="text" class="w-full border rounded border-gray-300" />
                            <ValidationMessage For="@(() => NewAudioCatalog.Name)" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Marca</label>
                            <input @bind="NewAudioCatalog.Brand" type="text" class="w-full border rounded border-gray-300" />
                            <ValidationMessage For="@(() => NewAudioCatalog.Brand)" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Descripcion</label>
                            <input @bind="NewAudioCatalog.Description" type="text" class="w-full border rounded border-gray-300" />
                            <ValidationMessage For="@(() => NewAudioCatalog.Description)" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Precio</label>
                            <input @bind="NewAudioCatalog.Price" type="text" class="w-full border rounded border-gray-300" />
                            <ValidationMessage For="@(() => NewAudioCatalog.Price)" />
                        </div>   
                     </div>
                </div>
                <div class="block space-y-2 mt-3">
                    <button disabled="@(!PhotoAudioCatalog.Any())" type="submit" class="w-full h-10 border rounded-xl font-semibold text-white bg-green-600">Agregar</button>
                </div>
            </EditForm>
        </div>
        <div class="border-1 md:w-1/3 mx-auto">
            <div class="flex place-items-center">
                @if (PhotoAudioCatalogBase64.Any())
                {
                    <img src="@PhotoAudioCatalogBase64.FirstOrDefault()" class="w-full sm:64 md:h-96" alt="">
                }
                else
                {
                    <img v-else src="https://rental.servicevision.es/wp-content/uploads/2019/05/default.jpg" class="w-full sm:64 md:h-96" alt="">
                }
            </div>
            <div class="sm:inline-flex w-full">
                <div class="md:w-1/2 border p-5 h-32">
                    @if (PhotoAudioCatalogBase64?.Count() > 0)
                    {
                        <div class="grid grid-cols-3 border">
                            @foreach (var photo in PhotoAudioCatalogBase64)
                            {
                                <img class="w-16 h-16" src="@photo" alt="">
                            }
                        </div>
                    }
                </div>
                <div class="flex flex-col md:w-1/2 h-32 sm:w-full relative cursor-pointer mx-auto justify-center items-center border border-gray-600 border-dotted">
                    <InputFile OnChange="@((InputFileChangeEventArgs e) => SaveImage(e, PhotoAudioCatalog, PhotoAudioCatalogBase64!))" multiple class="absolute opacity-0 w-full h-full" />
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 absolute">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
}