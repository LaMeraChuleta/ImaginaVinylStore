@page "/Checkout/Complete"
@using Client.App.Interfaces;

@inject IShopCartService ShopCartService
@inject NavigationManager NavigateToIndex

<Modal>
    <BodyContent>        
        <h3 class="font-semibold text-2xl text-center leading-6 text-gray-900" id="modal-new-format">Gracias por su compra en Imagina Vinyl Store</h3>        
        <h3 class="font-semibold text-2xl text-center leading-6 text-gray-900" id="modal-new-format">Enviaremos un correo de confirmacion</h3>
        <div class="bg-gray-200 inline-flex px-4 py-3 w-full space-x-3 justify-end sm:px-6">
            <button @onclick="@(() => NavigateToIndex.NavigateTo(""))" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Ok</button>
        </div>
    </BodyContent>
</Modal>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await ShopCartService.DeleteShopCart();        
        await base.OnInitializedAsync();
    }
}