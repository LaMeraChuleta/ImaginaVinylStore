<NavBar SendOpenLeftBar="@(() => ShowLeftBar =!ShowLeftBar)" SendRedirectPage="RedirectByPathURL"></NavBar>
@if (ShowLeftBar)
{
    <LeftNavBar SendRedirectPage="RedirectByPathURL"></LeftNavBar>
}

@code {
    
    [Inject] private NavigationManager? NavigationManager { get; set; }
    
    private bool ShowLeftBar { get; set; }

    private void RedirectByPathURL(string path)
    {
        ShowLeftBar = false;
        NavigationManager?.NavigateTo(path);
    }
}