<NavBar SendOpenLeftBar="@(() => ShowLeftBar = !ShowLeftBar)"
        SendOpenSearchList="@(() => ShowSearList = !ShowSearList)"
        SendOpenShopCartList="@(() => ShowShopCartList = !ShowShopCartList)"
        SendRedirectPage="RedirectByPathUrl">
</NavBar>


@if (ShowLeftBar)
{
    <LeftNavBar SendRedirectPage="RedirectByPathUrl"></LeftNavBar>
}

@if (ShowSearList)
{
    <SearchNavBarList ></SearchNavBarList>
}

@if (ShowShopCartList)
{
    <ShopCartNavBarList></ShopCartNavBarList>
}