<div class="flex flex-col items-start px-4 h-screen bg-gray-100 shadow-lg inset-y-0 right-0 fixed z-50 top w-96 pt-20 space-y-2">
    <p class="text-lg font-bold">Carrito de compras</p>
    @if (IsLoading)
    {
        <div class="my-auto border-gray-300 mx-auto h-5 w-5 animate-spin rounded-full border-2 border-t-blue-600" />
    }
    else if (!ShopCarts.Any())
    {
        <p class="my-auto mx-auto">Sin resultados</p>
    }
    else
    {

        @foreach (var item in ShopCarts)
        {
            <CardCatalogMusicShopCartBar SendIdDeleteShopCart="DeleteShopCartItem" ShopCart="item"></CardCatalogMusicShopCartBar>
        }
        <div class="flex justify-between w-full px-3">
            <p class="mt-3 text-lg font-bold">SubTotal</p>
            <p class="mt-3 text-lg font-bold">$@(ShopCarts.Sum(x => x.GetPrice()).ToString("#,##0.00"))</p>
        </div>
        <button @onclick="NavigateToCartSummary" class="w-full mt-3 h-10 border rounded-xl font-semibold text-white bg-blue-600 text-sm">Pagar</button>
    }
</div>