<div class="flex flex-col items-start px-4 h-screen bg-gray-100 shadow-lg inset-y-0 right-0 fixed z-50 top w-96 pt-20 space-y-2">
    <p class="text-lg font-bold">Carrito de compras</p>
    @foreach (var item in MusicCatalogs)
    {
        <CardCatalogMusicShopCartBar SendIdDeleteShopCart="DeleteShopCartItem" MusicCatalogs="item"></CardCatalogMusicShopCartBar>
    }
    <div class="flex justify-between w-full px-3">
        <p class="mt-3 text-lg font-bold">SubTotal</p>
        <p class="mt-3 text-lg font-bold">$@MusicCatalogs.Sum(x => x.Price).ToString("#,##0.00")</p>
    </div>
    <button class="w-full mt-3 h-10 border rounded-xl font-semibold text-white bg-blue-600 text-sm">Pagar</button>
</div>